<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="anchorPane" prefHeight="512.0" prefWidth="768.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.demo.controller.ViewDeliveredController">
   <children>
      <BorderPane prefHeight="512.0" prefWidth="768.0">
         <top>
            <Label alignment="CENTER" prefHeight="65.0" prefWidth="768.0" style="-fx-background-color: #BB2525;" text="Delivered Orders" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <HBox alignment="TOP_RIGHT" prefHeight="56.0" prefWidth="768.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnBackHome" style="-fx-background-color: #BB2525;" text="Go to Home" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnCancel" style="-fx-background-color: #BB2525;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="colOrderId" prefWidth="125.0" text="Order ID" />
                <TableColumn fx:id="colCustomerId" prefWidth="125.0" text="Customer ID" />
                  <TableColumn fx:id="colName" prefWidth="208.0" text="Name" />
                  <TableColumn fx:id="colQuantity" prefWidth="125.0" text="Quantity" />
                  <TableColumn fx:id="colOrderValue" prefWidth="125.0" text="Order Value" />
              </columns>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
